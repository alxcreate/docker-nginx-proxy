server {
    # Redirect HTTP to HTTPS
    listen 80;
    listen [::]:80;

    # Add server name
    server_name servername;

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    # SSL configuration

    # Add server name
    server_name servername;
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;

    ssl_certificate /etc/nginx/ssl/cert.crt;
    ssl_certificate_key /etc/nginx/ssl/key.key;
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;

    index index.html
    include /etc/nginx/default.d/*.conf;

    root /var/www/html;

    error_page 400 401 402 403 404 405 406 407 408 409 410 411 412 413 414
            415 416 417 418 421 422 423 424 425 426 428 429 431 451 500
            501 502 503 504 505 506 507 508 510 511 /error.html;

    location = /error.html {
        ssi on;
        internal;
        root /var/www/html;
    }

    location / {
        auth_pam "Kerberos Authentication";
        auth_pam_service_name "nginx";
        # Change address and port
        proxy_pass http://10.0.0.1:80/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /path/ {
        # Change address and port
        proxy_pass http://10.0.0.2:9050/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

}
